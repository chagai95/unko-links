# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Your Telegram Bot Token from BotFather
BOT_TOKEN=your_bot_token_here

# Telegram Group ID (use negative number for groups)
GROUP_ID=-1234567890123

# Topic Thread IDs
# Main topic where messages are received
HAUPTGRUPPE_TOPIC_ID=2
# Topic for "biete" (offer) messages
BIETE_TOPIC_ID=3
# Topic for "suche" (search/request) messages
SUCHE_TOPIC_ID=4

# Time window in minutes for context-based forwarding
# Messages from the same user within this time will be forwarded to the same topics
# even without hashtags
CONTEXT_TIME_WINDOW_MINUTES=5
